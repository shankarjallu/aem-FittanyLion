<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Image"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
        margin="{Boolean}false">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <image
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Image"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        maximized="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <file
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                        autoStart="{Boolean}false"
                                        class="cq-droptarget"
                                        fieldLabel="Image asset"
                                        fileNameParameter="./fileName"
                                        fileReferenceParameter="./fileReference"
                                        mimeTypes="[image]"
                                        multiple="{Boolean}false"
                                        name="./file"
                                        title="Upload Image Asset"
                                        uploadUrl="${suffix.path}"
                                        useHTML5="{Boolean}true"/>
                                    <decorative
                                        granite:class="core-image-decorative"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="Check if the image should be ignored by assistive technology and therefore does not require an alternative text. This applies to decorative images only."
                                        name="./isDecorative"
                                        text="Image is decorative"
                                        value="{Boolean}true"/>
                                    <alt
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Textual alternative of the meaning or function of the image, for visually impaired readers."
                                        fieldLabel="Alternative Text"
                                        name="./alt"
                                        required="{Boolean}true"
                                        wrapperClass="core-image-alt"/>
                                    <linkURL
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldDescription="Make the image a link to another resource."
                                        fieldLabel="Link"
                                        name="./linkURL"
                                        rootPath="/content"
                                        wrapperClass="core-image-link"/>
                                    <caption
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Additional information about the image."
                                        fieldLabel="Caption"
                                        name="./title"/>
                                    <displayCaptionPopup
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="When checked, the caption won't be displayed below the image, but as a pop-up displayed by some browsers when hovering over the image."
                                        name="./displayPopupTitle"
                                        text="Display caption as pop-up"
                                        value="{Boolean}true"/>
                                    <hideinmobile
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        name="./hideinmobile"
                                        text="Hide in mobile (&lt;768 px)"
                                        value="{Boolean}true"/>
                                    <hideindesk
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        name="./hideindesk"
                                        text="Hide in desktop (>767 px)"
                                        value="{Boolean}true"/>
                                    <size
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/sizefield"
                                        fieldLabel="Size (px)">
                                        <width
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                            defaultValue=""
                                            emptyText="Width"
                                            name="./width"/>
                                        <height
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                            defaultValue=""
                                            emptyText="Height"
                                            name="./height"/>
                                    </size>
                                    <marginleft
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                        defaultValue=""
                                        emptyText="Margin left"
                                        name="./marginleft"/>
                                    <marginright
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                        defaultValue=""
                                        emptyText="Margin right"
                                        name="./marginright"/>
                                    <margintop
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                        defaultValue=""
                                        emptyText="Margin top"
                                        name="./margintop"/>
                                    <marginbottom
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                        defaultValue=""
                                        emptyText="Margin bottom"
                                        name="./marginbottom"/>
                                    <imageopacity
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Image opacity"
                                        name="./imgopacity">
                                        <items jcr:primaryType="nt:unstructured">
                                            <none
                                                jcr:primaryType="nt:unstructured"
                                                text="None"
                                                value=""/>
                                            <_x0030_.1
                                                jcr:primaryType="nt:unstructured"
                                                text="0.1"
                                                value="0.1"/>
                                            <_x0030_.2
                                                jcr:primaryType="nt:unstructured"
                                                text="0.2"
                                                value="0.2"/>
                                            <_x0030_.3
                                                jcr:primaryType="nt:unstructured"
                                                text="0.3"
                                                value="0.3"/>
                                            <_x0030_.4
                                                jcr:primaryType="nt:unstructured"
                                                text="0.4"
                                                value="0.4"/>
                                            <_x0030_.5
                                                jcr:primaryType="nt:unstructured"
                                                text="0.5"
                                                value="0.5"/>
                                            <_x0030_.6
                                                jcr:primaryType="nt:unstructured"
                                                text="0.6"
                                                value="0.6"/>
                                            <_x0030_.7
                                                jcr:primaryType="nt:unstructured"
                                                text="0.7"
                                                value="0.7"/>
                                            <_x0030_.8
                                                jcr:primaryType="nt:unstructured"
                                                text="0.8"
                                                value="0.8"/>
                                            <_x0030_.9
                                                jcr:primaryType="nt:unstructured"
                                                text="0.9"
                                                value="0.9"/>
                                        </items>
                                    </imageopacity>
                                </items>
                            </column>
                        </items>
                    </image>
                    <alignment
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Image Alignment"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <image-align
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Image alignment"
                                        fieldLabel="Image alignment"
                                        name="./imagealign">
                                        <items jcr:primaryType="nt:unstructured">
                                            <none
                                                jcr:primaryType="nt:unstructured"
                                                text="None"
                                                value=""/>
                                            <left
                                                jcr:primaryType="nt:unstructured"
                                                text="left align"
                                                value="image-left-align"/>
                                            <right
                                                jcr:primaryType="nt:unstructured"
                                                text="right align"
                                                value="image-right-align"/>
                                            <center
                                                jcr:primaryType="nt:unstructured"
                                                text="center align"
                                                value="image-center-align"/>
                                        </items>
                                    </image-align>
                                </items>
                            </column>
                        </items>
                    </alignment>
                    <padding
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Image padding"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <desktop-padding
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Desktop left/right padding"
                                        name="./deskimagepadding">
                                        <items jcr:primaryType="nt:unstructured">
                                            <none
                                                jcr:primaryType="nt:unstructured"
                                                text="None"
                                                value=""/>
                                            <five
                                                jcr:primaryType="nt:unstructured"
                                                text="5px padding"
                                                value="horizontal-five-padding"/>
                                            <ten
                                                jcr:primaryType="nt:unstructured"
                                                text="10px padding"
                                                value="horizontal-ten-padding"/>
                                            <fifteen
                                                jcr:primaryType="nt:unstructured"
                                                text="15px padding"
                                                value="horizontal-fifteen-padding"/>
                                        </items>
                                    </desktop-padding>
                                    <mobile-padding
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Mobile left/right padding"
                                        name="./mobileimagepadding">
                                        <items jcr:primaryType="nt:unstructured">
                                            <none
                                                jcr:primaryType="nt:unstructured"
                                                text="None"
                                                value=""/>
                                            <five
                                                jcr:primaryType="nt:unstructured"
                                                text="5px padding"
                                                value="mobhorz-five-padding"/>
                                            <ten
                                                jcr:primaryType="nt:unstructured"
                                                text="10px padding"
                                                value="mobhorz-ten-padding"/>
                                            <fifteen
                                                jcr:primaryType="nt:unstructured"
                                                text="15px padding"
                                                value="mobhorz-fifteen-padding"/>
                                        </items>
                                    </mobile-padding>
                                </items>
                            </column>
                        </items>
                    </padding>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
